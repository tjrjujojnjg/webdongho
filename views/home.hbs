<style>
  @import url('https://fonts.googleapis.com/css?family=Oswald:400,700');
  *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    {{!-- font-family: 'Oswald',sans-serif; --}}
  }
  .mybody{
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 75vh;
    background: #434750;
  }
  .myul{
    position: relative;
    transform: skewY(-15deg);
  }
  .myul li{
    position: relative;
    list-style: none;
    width: 200px;
    background: #3e3f46;
    padding:15px;
    z-index: var(--i);
    transition: 0.5s;
  }
  .myul li:hover
  {
    background: purple;
    transform: translateX(50px);
  }
  .myul li::before
  {
    content: '';
    position: absolute;
    top: 0;
    left: -40px;
    width: 40px;
    height: 100%;
    background: #2e3133;
    transform-origin: right;
    transform: skewY(45deg);
    transform: 0.5s;
  }
  .myul li:hover::before
  {
    background:purple;
  }
   .myul li::after
  {
    content: '';
    position: absolute;
    top: -40px;
    left: 0;
    width: 100%;
    height: 40px;
    background: #35383e;
    transform-origin: bottom;
    transform: skewX(45deg);
    transform: 0.5s;
  }
  .myul li:hover::after
  {
    background:purple;
  }
  .myul li a
  {
    text-decoration: none;
    color: #999;
    display: block;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: 0.5s;
  }
  .myul li:hover a
  {
    color:aqua;
  }
  .myul li:last-child::after
  {
    box-shadow: -120px 120px 20px rgba(0,0,0,0.25);
  }
</style>
<div class="card">
  <div class="card-header progress-bar progress-bar-striped text-white">
   <b>HOME</b>
  </div>
  <div class="card-body mybody">
    <ul class="myul">
    <li style="--i:5"><a href="/about">About</a></li>
    <li style="--i:4"><a href="/services">Services</a></li>
    <li style="--i:3"><a href="/portfolio">Portfolio</a></li>
    <li style="--i:2"><a href="/ourteam">Our Team</a></li>
    <li style="--i:1"><a href="/contact">Contact</a></li>
   </ul>
  </div>
  <div class="card-footer text-muted">
    TTCNTT FOUR T
  </div>
</div>